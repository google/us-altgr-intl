key L {
    label:                              'l'
    base:                               'l'
    shift, capslock:                    'L'
    ralt:                               '\u00f8'
    shift+ralt, capslock+ralt:          '\u00d8'
}

key SEMICOLON {
    label:                              ';'
    base:                               ';'
