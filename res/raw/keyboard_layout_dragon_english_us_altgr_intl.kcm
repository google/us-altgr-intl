key A {
    label:                              'a'
    base:                               'a'
    shift, capslock:                    'A'
    ralt:                               '\u00e1'
    shift+ralt, ralt+capslock:          '\u00c1'
}

key S {
    label:                              's'
    base:                               's'
    shift, capslock:                    'S'
    ralt:                               '\u00df'
    shift+ralt:                         '\u00a7'
}

key D {
    label:                              'd'
