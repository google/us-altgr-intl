#
# English (US) International keyboard layout with AltGr dead keys: dead
# circumflex has been moved from Shift-6 to AltGr-Shift-6; all mappings
# conflicting with English (US) (on the keys 1, 2, O, P, =) have been moved to
# require additional Ctrl; to allow for this, ² had to be additionally moved
# from AltGr-2 to AltGr-Ctrl-3.
#
# AltGr-1:            ESCAPE
# AltGr-Ctrl-1:       ¡
# AltGr-Ctrl-Shift-1: ¹
# AltGr-2:            `
# AltGr-Shift-2:      ~
# AltGr-Ctrl-2:       dead `
# AltGr-Ctrl-Shift-2: dead ~
# AltGr-Ctrl-3:       ²
# Shift-6:            ^
# AltGr-Shift-6:      dead ^
# AltGr-O:            [
# AltGr-Shift-O:      {
# AltGr-Ctrl-O:       ó
# AltGr-Ctrl-Shift-O: Ó
# AltGr-P:            ]
# AltGr-Shift-P:      }
# AltGr-Ctrl-P:       ö
# AltGr-Ctrl-Shift-P: Ö
# AltGr-=:            \
# AltGr-Shift-=:      |
# AltGr-Ctrl-=:       ×
# AltGr-Ctrl-Shift-=: ÷
#

type OVERLAY

### ROW 1

key 1 {
    label:                              '1'
    base:                               '1'
    shift:                              '!'
    ralt:                               replace ESCAPE
    ralt+ctrl:                          '\u00a1'
    ralt+ctrl+shift:                    '\u00b9'
}

key 2 {
    label:                              '2'
    base:                               '2'
    shift:                              '@'
    ralt:                               '`'
    ralt+shift:                         '~'
    ralt+ctrl:                          '\u0300'
    ralt+ctrl+shift:                    '\u0303'
}

key 3 {
    label:                              '3'
    base:                               '3'
    shift:                              '#'
    ralt:                               '\u00b3'
    ralt+ctrl:                          '\u00b2'
}

key 4 {
    label:                              '4'
    base:                               '4'
    shift:                              '$'
    ralt:                               '\u00a4'
    ralt+shift:                         '\u00a3'
}

key 5 {
    label:                              '5'
    base:                               '5'
    shift:                              '%'
    ralt:                               '\u20ac'
}

key 6 {
    label:                              '6'
    base:                               '6'
    shift:                              '^'
    ralt:                               '\u00bc'
    ralt+shift:                         '\u0302'
}

key 7 {
    label:                              '7'
    base:                               '7'
    shift:                              '&'
    ralt:                               '\u00bd'
}

key 8 {
    label:                              '8'
    base:                               '8'
    shift:                              '*'
    ralt:                               '\u00be'
}

key 9 {
    label:                              '9'
    base:                               '9'
    shift:                              '('
    ralt:                               '\u2018'
}

key 0 {
    label:                              '0'
    base:                               '0'
    shift:                              ')'
    ralt:                               '\u2019'
}

key MINUS {
    label:                              '-'
    base:                               '-'
    shift:                              '_'
    ralt:                               '\u00a5'
}

### ROW 2

key Q {
    label:                              'q'
    base:                               'q'
    shift, capslock:                    'Q'
    ralt:                               '\u00e4'
    shift+ralt, capslock+ralt:          '\u00c4'
}

key W {
    label:                              'w'
    base:                               'w'
    shift, capslock:                    'W'
    ralt:                               '\u00e5'
    shift+ralt, capslock+ralt:          '\u00c5'
}

key E {
    label:                              'e'
    base:                               'e'
    shift, capslock:                    'E'
    ralt:                               '\u00e9'
    shift+ralt, capslock+ralt:          '\u00c9'
}

key R {
    label:                              'r'
    base:                               'r'
    shift, capslock:                    'R'
    ralt:                               '\u00ae'
}

key T {
    label:                              't'
    base:                               't'
    shift, capslock:                    'T'
    ralt:                               '\u00fe'
    shift+ralt, capslock+ralt:          '\u00de'
}

key Y {
    label:                              'y'
    base:                               'y'
    shift, capslock:                    'Y'
    ralt:                               '\u00fc'
    shift+ralt, capslock+ralt:          '\u00dc'
}

key U {
    label:                              'u'
    base:                               'u'
    shift, capslock:                    'U'
    ralt:                               '\u00fa'
    shift+ralt, capslock+ralt:          '\u00da'
}

key I {
    label:                              'i'
    base:                               'i'
    shift, capslock:                    'I'
    ralt:                               '\u00ed'
    shift+ralt, capslock+ralt:          '\u00cd'
}

key O {
    label:                              'o'
    base:                               'o'
    shift, capslock:                    'O'
    ralt:                               '['
    ralt+shift:                         '{'
    ralt+ctrl:                          '\u00f3'
    shift+ralt+ctrl, capslock+ralt+ctrl: '\u00d3'
#    ralt:                               '\u00ab'
}

key P {
    label:                              'p'
    base:                               'p'
    shift, capslock:                    'P'
    ralt:                               ']'
    ralt+shift:                         '}'
    ralt+ctrl:                          '\u00f6'
    shift+ralt+ctrl, capslock+ralt+ctrl: '\u00d6'
#    ralt:                               '\u00bb'
}

key EQUALS {
    label:                              '='
    base:                               '='
    shift:                              '+'
    ralt:                               '\\'
    ralt+shift:                         '|'
    ralt+ctrl:                          '\u00d7'
    shift+ralt+ctrl:                    '\u00f7'
#    ralt:                               '\u00ac'
#    shift+ralt:                         '\u00a6'
}

